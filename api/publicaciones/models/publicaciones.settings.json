{
  "kind": "collectionType",
  "collectionName": "publicaciones",
  "info": {
    "name": "Publicaciones"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Titulo": {
      "type": "string",
      "required": true
    },
    "Redaccion": {
      "type": "richtext",
      "required": true
    },
    "autor": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "publicaciones"
    },
    "Portada": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "Tipo": {
      "type": "enumeration",
      "enum": [
        "Anuncio",
        "Noticia",
        "Matriculacion"
      ],
      "default": "Noticia",
      "required": true
    },
    "Publicado": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "url": {
      "type": "uid",
      "targetField": "Titulo",
      "required": true
    }
  }
}
