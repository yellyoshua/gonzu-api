<body>
  <section class="report-header">
    <%if (schoolname) { %>
    <h3 class="report-author"><%= schoolname %></h3>
    <% } else { %>
    <h3 class="report-author">UE. Cardenal Gonzalez Zumarraga</h3>
    <% } %>
    <%if (schoolicon) { %>
    <img class="icon-school" src="<%= schoolicon %>" />
    <% } else { %>
    <img class="icon-school" src="https://s3-us-east-2.amazonaws.com/gonzu-api-bucket/2020/09/apple-touch-icon-1.png" />
    <% } %>
    <h1 class="report-title">Reporte general votaciones</h1>
    <h4 class="report-subtitle"><%= name %></h4>
  </section>
  <section class="report-content">
    <h1>Estado elecciones</h1>
    <div class="report-content-list">
      <div class="report-content-container">
        <div class="report-content-card">
          <p><%= totalVotes %></p>
          <h1>Votaron</h1>
        </div>
      </div>
      <div class="report-content-container">
        <div class="report-content-card">
          <p><%= votesRestantes %></p>
          <h1>No votaron(En blanco)</h1>
        </div>
      </div>
      <div class="report-content-container">
        <div class="report-content-card">
          <p><%= totalParticipants %></p>
          <h1>Total votantes</h1>
        </div>
      </div>
    </div>
    <h1>Estado votos por Partidos</h1>
    <div class="report-content-list">
      <% campaigns.forEach(function(campaign){%>
      <div class="report-content-container">
        <div class="report-content-card card-black">
          <p><%= votes_group.count_by_campaign[campaign] || 0 %></p>
          <h1>Votos(<%= campaigns_list[campaign].name %>)</h1>
        </div>
      </div>
      <% }); %>
      <div class="report-content-container">
        <div class="report-content-card card-black">
          <p><%= votesRestantes %></p>
          <h1>Votos(En blanco)</h1>
        </div>
      </div>
    </div>
  </section>
  <section class="report-content-container">
    <h1>Estado votos por Etiquetas</h1>
    <table>
      <tr>
        <th>Etiqueta</th>
        <th>Votaron</th>
        <th>No votaron</th>
        <th>Total</th>
      </tr>
      <% tags.forEach(function(tag){%>
      <%if (count_per_tag[tag]) { %>
      <tr>
        <td class="centered-text to-uppercase"><%= tag %></td>
        <td class="centered-text"><%= votes_group.count_by_tag[tag] || 0 %></td>
        <td class="centered-text"><%= count_per_tag[tag] - (votes_group.count_by_tag[tag] || 0) %></td>
        <td class="centered-text"><%= count_per_tag[tag] %></td>
      </tr>
      <% }%>
      <% }); %>
    </table>
  </section>
